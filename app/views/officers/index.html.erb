<h1>Officers</h1>

<table class="table table-striped table-dark table-bordered table-hover table-sm">
  <thead class="thead-light">
    <tr>
      <th>Officer UIN</th>
      <th>Name</th>
      <th>Email</th>
      <th>Amount Owed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @officers.each do |officer| %>
      <tr>
        <td><%= officer.officer_uin %></td>
        <td><%= officer.name %></td>
        <td><%= officer.email %></td>
        <td><%= officer.amount_owed %></td>

        <td><%= link_to 'Edit', edit_officer_path(officer), class: "btn btn-secondary" %></td>
        <td><%= link_to 'Delete', officer, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Officer', new_officer_path, class: 'btn btn-light btn-lg btn-block' %>
