<h1>Payment Methods</h1>

<table class="table table-striped table-dark table-bordered table-hover table-sm">
  <thead class="thead-light">
    <tr>
      <th>Method</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payment_methods.each do |payment_method| %>
      <tr>
        <td><%= payment_method.method %></td>
        <td><%= link_to 'Edit', edit_payment_method_path(payment_method), class: "btn btn-secondary" %></td>
        <td><%= link_to 'Delete', payment_method, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Payment Method', new_payment_method_path, class: 'btn btn-light btn-lg btn-block' %>
