<h1>Finances</h1>

<table class="table table-striped table-dark table-bordered table-hover table-sm">
  <thead class="thead-light">
    <tr>
      <th>Deposits</th>
      <th>Withdrawals</th>
      <th>Payments</th>
      <th>Total Balance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= Deposit.all.pluck(:amount).sum %></td>
      <td><%= Withdrawal.all.pluck(:amount).sum %></td>
      <td><%= Payment.all.pluck(:amount).sum %></td>
      <td><%= Payment.all.pluck(:amount).sum + Deposit.all.pluck(:amount).sum - Withdrawal.all.pluck(:amount).sum %></td>
    </tr>
  </tbody>
</table>

<%= "Note: these values are totals" %>