<h1>Withdrawals</h1>

<table class="table table-striped table-dark table-bordered table-hover table-sm">
  <thead class="thead-light">
    <tr>
      <th>Officer</th>
      <th>Amount</th>
      <th>Notes</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @withdrawals.each do |withdrawal| %>
      <tr>
        <%if !withdrawal.officer.nil?%>
          <td><%= withdrawal.officer.name %></td>
          <td><%= withdrawal.amount %></td>
          <td><%= withdrawal.description %></td>
          <td><%= withdrawal.date %></td>
          <td><%= link_to 'Edit', edit_withdrawal_path(withdrawal), class: "btn btn-secondary" %></td>
          <td><%= link_to 'Delete', withdrawal, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
        <%end%>
      </tr>

    <% end %>
  </tbody>
</table>

<% @withdrawals.each do |withdrawal| %>
  <% @sum += withdrawal.amount %>
<% end %>
<br>

<h3>Total Withdrawals: $<%= @sum%></h3>

<%= link_to 'New Withdrawal', new_withdrawal_path, class: 'btn btn-light btn-lg btn-block' %>
