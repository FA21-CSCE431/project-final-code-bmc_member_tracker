<h1>Transaction Types</h1>

<table class="table table-striped table-dark table-bordered table-hover table-sm">
  <thead class="thead-light">
    <tr>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transaction_types.each do |transaction_type| %>
      <tr>
        <td><%= transaction_type.category %></td>
        <td><%= link_to 'Show', transaction_type, class: "btn btn-outline-info" %></td>
        <td><%= link_to 'Edit', edit_transaction_type_path(transaction_type), class: "btn btn-secondary" %></td>
        <td><%= link_to 'Destroy', transaction_type, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Transaction Type', new_transaction_type_path, class: 'btn btn-light btn-lg btn-block' %>
